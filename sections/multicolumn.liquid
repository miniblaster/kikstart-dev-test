{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .multicolumn .title {
    margin: auto;
  }

  .multicolumn.background-primary .multicolumn-card {
    text-align: center;
    background: none;
  }

  .ingredient-image,
  .modal-ingredient-image {
    width: 200px;
    height: 200px;
    margin: auto;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 0px 0px 2px grey;
  }

  .ingredient-name {
    padding: 1.5rem 0rem;
    text-transform: uppercase;
  }

  .ingredient-detail-btn {
    cursor: pointer;
    background: none;
    margin-top: 1.5rem;
    border: none;
    border-bottom: 1px solid lightgrey;
  }

  /* The Modal */
  .modal-ingredient {
    display: none;
    position: fixed;
    z-index: 10;
    padding-top: 100px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0,0.4);
  }

  .modal-content {
    width: 80%;
    background-color: #fefefe;
    margin: auto;
    padding: 1rem;
    border-radius: 1.5rem;
    border: 1px solid #888;
  }

  .modal-ingredient-container {
    padding: 5rem;
  }

  .modal-header {
    display: flex;
    gap: 3rem;
  }
  @media screen and (max-width: 750px) {
    .modal-ingredient-container {
      padding: 2rem;
      text-align: center;
    }
    .modal-header {
      flex-direction: column;
      gap: 1rem;
    }
  }

  .modal-header h2 {
    text-transform: uppercase;
  }

  .close {
    color: #aaaaaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }
  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="multicolumn color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.button_label != blank and show_mobile_slider -%}
          <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">
            {{- section.settings.button_label | escape -}}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}
    <slider-component class="slider-mobile-gutter">
      <ul
        class="multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--mobile grid--peek{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- assign ingredients = product.metafields.custom.product_ingredient.value -%}
        {%- for ingredient in ingredients -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            <div class="multicolumn-card content-container">
              <img class="ingredient-image" src="{{ingredient.image | img_url: 'master' }}" alt="Ingredient Image" />
              <h3 class="ingredient-name" data-name="{{ingredient.name}}">
                {{ ingredient.display_name }}
              </h3>
              {{ ingredient.brief_description | metafield_tag }}
              <button class="ingredient-detail-btn" id="Learn-more-{{forloop.index}}">LEARN MORE</button>
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if show_mobile_slider -%}
        <div class="slider-buttons no-js-hidden medium-hide">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
          >
            {% render 'icon-caret' %}
          </button>
        </div>
      {%- endif -%}
    </slider-component>
  </div>
</div>

{%- assign ingredients = product.metafields.custom.product_ingredient.value -%}
{%- for ingredient in ingredients -%}
  <div id="Modal-ingredient-{{forloop.index}}" class="modal-ingredient">
    <div class="modal-content">
      <span id="Modal-close-{{forloop.index}}" class="close">&times;</span>
      <div class="modal-ingredient-container">
        <div class="modal-header">
          <img class="modal-ingredient-image" src="{{ingredient.image | img_url: 'master' }}" alt="Ingredient Image" />
          <div>
            <h2>{{ingredient.display_name}}</h3>
            <span><strong>Latin Name:&nbsp;</strong>{{ingredient.name}}</span>
            {{ingredient.other_info | metafield_tag}}
          </div>
        </div>
        {{ingredient.main_description | metafield_tag}}
      </div>
    </div>
  </div>
{%- endfor -%}

<script>
  window.onload = function() {
    const learnMoreBtns = document.querySelectorAll('[id*="Learn-more-"]')

    learnMoreBtns.forEach(learnMoreBtn => {
      learnMoreBtn.addEventListener('click', (event) => {
        const index = event.target.id.match(/\d+$/)[0];
        const modal = document.getElementById(`Modal-ingredient-${index}`)
        const close = document.getElementById(`Modal-close-${index}`);

        modal.style.display = "block"
        document.getElementsByTagName("body")[0].style.backgroundColor = "rgba(0, 0, 0, 0.4)"

        close.onclick = function() {
          modal.style.display = "none"
          document.getElementsByTagName("body")[0].style.backgroundColor = "rgba(0, 0, 0, 0.4)"
        }
      })
    })
  }
</script>

