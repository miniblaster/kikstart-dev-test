{{ 'section-collection-tabs.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<div class="page-width" data-base-url="">
  <div class="collection-navbar">
    {% for block in section.blocks %}
      {% assign titleToUrl = block.settings.collection.title | downcase | replace: ' ', '-' %}
      <a class="collection-tab" href="/collections/{{ titleToUrl }}">{{ block.settings.collection.title }}</a>
    {% endfor %}
  </div>
</div>

<script>
  $(function() {

    let collectionTabs = document.querySelectorAll('.collection-tab')

    collectionTabs.forEach(collectionTab => {
        collectionTab.addEventListener('click', loadCollection)
    })

    function loadCollection(event) {
        event.preventDefault()
        document.querySelector('[data-base-url]').dataset.baseUrl = event.currentTarget.href
        ajaxUpdateCollectionGrid()
    }

    function createFilterUrl () {
      const baseUrl = document.querySelector('[data-base-url]').getAttribute('data-base-url')
      let ajaxUrl = baseUrl

      // Sort
      const selectedSort = document.querySelector('#SortBy [selected]')
      if (selectedSort) {
        let template = 'ajax'
        ajaxUrl += `?view=${template}&sort_by=${selectedSort.value}&`
      } else {
          ajaxUrl += '?'
      }

      // Availability filter
      const filterAvailability = document.querySelectorAll('[id*="Filter-filter.v.availability-"][checked]')
      if (filterAvailability) {
        for (let i = 0; i < filterAvailability.length; i++) {
          ajaxUrl += `filter.v.availability=${filterAvailability[i].value}&`
        }
      }

      // From-Price filter
      const filterFromPrice = document.querySelector('#Filter-Price-GTE[value]')
      if (filterFromPrice) {
        ajaxUrl += `filter.v.price.gte=${filterFromPrice.value}&`
      }

      // To-Price filter
      const filterToPrice = document.querySelector('#Filter-Price-LTE[value]')
      if (filterToPrice) {
        ajaxUrl += `filter.v.price.lte=${filterToPrice.value}&`
      }

      // remove last '?' or '&'
      ajaxUrl = ajaxUrl.slice(0, -1)

      return ajaxUrl
    }

    function ajaxUpdateCollectionGrid() {
      const ajaxUrl = createFilterUrl()

      $.ajax({
        url: ajaxUrl,
        method: 'GET',
        success: function(response) {
          // update page contents
          const filteredPage = document.createElement('div')
          filteredPage.innerHTML = response

          const filteredProducts = filteredPage.querySelector('.collection')

          // update page url
          const filterUrl = ajaxUrl.replace('view=ajax&', '')
          history.pushState(null, '', filterUrl)

          const collectionLayout = document.querySelector('.collection')
          collectionLayout.innerHTML = ''
          collectionLayout.innerHTML = filteredProducts.innerHTML
        },
        error: function(err) {
          console.error(err)
        }
      })
    }
  })
</script>

{% schema %}
{
  "name": "Collection Tabs",
  "tag": "section",
  "class": "section section-collection-tabs",
  "max_blocks": 20,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Tabs",
      "blocks": [
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}

